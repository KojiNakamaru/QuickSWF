{
  "properties": {
    "docsDir": "docs",
    "vendorDir": "vendor",
    "binDir": "bin",
    "closure-compiler-jar": "${vendorDir}/google-closure-compiler/compiler.jar"
  },

  "resources": {
    "ZLib": {
      "type": "remote",
      "location": "git",
      "url": "git://github.com/imaya/zlib.js.git",
      "branch": "develop",
      "root": "bin",
      "files": [
        "inflate.min.js"
      ]
    },

    "Breader": {
      "type": "package",
      "location": "git",
      "url": "git://github.com/Moncader/Breader.git",
      "targets": ["all"]
    },

    "Cues": {
      "type": "package",
      "location": "git",
      "url": "git://github.com/JSDump/Cues.git",
      "targets": ["all"]
    }
  },

  "targets": {
    "quickswf": {
      "builder": "closure-compiler",
      "compilationLevel": "WHITESPACE_ONLY",
      "outputs": "${binDir}/quickswf.js",
      "resources": [
        {
          "type": "reference",
          "name": "ZLib"
        },

        {
          "type": "reference",
          "name": "Breader"
        },

        {
          "type": "reference",
          "name": "Cues"
        },

        {
          "type": "files",
          "root": "src/utils",
          "files": [
            "browser.js",
            "polyfills.js",
            "charconv.js",
            "crc32.js",
            "MediaLoader.js"
          ]
        },

        {
          "type": "files",
          "root": "src/basic_data_types",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/display_list",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/control_tags",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/actions",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/gradients",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/shapes",
          "files": [
            "FILLSTYLE.js",
            "LINESTYLE.js",
            "SHAPERECORD.js",
            "DefineShape.js"
          ]
        },

        {
          "type": "files",
          "root": "src/bitmaps",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/shape_morphing",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/fonts_and_text",
          "files": [
            "KERNINGRECORD.js",
            "GLYPHENTRY.js",
            "TEXTRECORD.js",
            "DefineFont.js",
            "DefineText.js",
            "DefineEditText.js"
          ]
        },

        {
          "type": "files",
          "root": "src/sounds",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/buttons",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/sprites_and_movie_clips",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/swf_structure",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src",
          "files": [
            "quickswf.js"
          ]
        }
      ]
    }
  }
}
