{
  "properties": {
    "docsDir": "docs",
    "vendorDir": "vendor",
    "binDir": "bin",
    "closure-compiler-jar": "${vendorDir}/google-closure-compiler/compiler.jar"
  },

  "resources": {
    "ZLib": {
      "type": "remote",
      "location": "git",
      "url": "git://github.com/imaya/zlib.js.git",
      "branch": "develop",
      "root": "bin",
      "files": [
        "inflate.min.js"
      ]
    },

    "Breader": {
      "type": "package",
      "location": "git",
      "url": "git://github.com/Moncader/Breader.git",
      "targets": ["all"]
    }
  },

  "targets": {
    "quickswf": {
      "builder": "closure-compiler",
      "compilationLevel": "WHITESPACE_ONLY",
      "outputs": "${binDir}/quickswf.js",
      "resources": [
        {
          "type": "reference",
          "name": "ZLib"
        },

        {
          "type": "reference",
          "name": "Breader"
        },

        {
          "type": "files",
          "root": "src",
          "files": [
            "quickswf.js",
            "swf.js",
            "parser.js",
            "crc32.js"
          ],
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/structs",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/displaylist-structs",
          "include": "^.+\\.js$"
        },

        {
          "type": "files",
          "root": "src/tags",
          "include": "^.+\\.js$"
        }
      ]
    }
  }
}
